
use utf8;

my %cmap = (

    # Romanian

    "\x{0218}"      =>  "\x{015E}",     # S-comma
    "\x{0219}"      =>  "\x{015F}",
    "\x{021A}"      =>  "\x{0162}",     # T-comma
    "\x{021B}"      =>  "\x{0163}",

);

sub {
    $_[0] =~ s{ (.) }{ $cmap{$1} // $1 }gexms;
    return;
};

